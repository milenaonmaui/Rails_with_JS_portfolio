<!DOCTYPE html>
<html>
  <head>
    <title>Adventure Cruises</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   
    <div class="navbar navbar-expand-lg bg-secondary text-uppercase navbar-fixed-top" id="mainNav">
      <div class="container">
        
        <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
        <%if logged_in?%>
            <%= link_to "#{current_user.name}'s bookings", user_path(current_user), :class =>"navbar-brand"%>
            <%= link_to "Log Out", logout_path, method: :delete, :class =>"navbar-brand"%>
        <%else%>
            <a class="navbar-brand" href="<%= signup_url %>"/>Sign Up</a>
            <a class="navbar-brand" href="<%= login_url %>"/>Log In</a>
        <%end%>
      </div>
        
    </div>
    <div class = "container container-fluid">
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
            <%= value %>
        </div>
      <% end %>
      <div>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
